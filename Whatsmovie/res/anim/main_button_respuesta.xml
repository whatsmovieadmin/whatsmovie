<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#a4a4a4"
                android:endColor="#e4e4e4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7e7e7e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#e4e4e4"
                android:endColor="#a4a4a4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7e7e7e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>