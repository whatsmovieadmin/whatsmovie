<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wm_bg_opciones"
    tools:context=".AcercaDe" >

    <TextView
        android:id="@+id/txt_acercade_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_acercade_nombre"
        android:layout_centerHorizontal="true"
        android:text="@string/text_acercade_version"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/txt_acercade_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:text="@string/title_activity_acerca_de"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/txt_acercade_logo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_acercade_nombre"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/des_imageMain"
        android:src="@drawable/logo_wm_final" />

    <TextView
        android:id="@+id/txt_acercade_anoYEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_acercade_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/text_acercade_anoYEmpresa"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_acercade_derechos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_acercade_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/text_acercade_derechos"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_acercade_creadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_acercade_derechos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/text_acercade_creadores1"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_acercade_creadores2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_acercade_creadores"
        android:layout_centerHorizontal="true"
        android:text="@string/text_acercade_creadores2"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_acercade_creadores1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_acercade_creadores2"
        android:layout_centerHorizontal="true"
        android:text="@string/text_acercade_creadores3"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>