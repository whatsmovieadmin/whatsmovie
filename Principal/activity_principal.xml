<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Principal" 
    android:background="@drawable/logowhatsmovie4">

    <Button
        android:id="@+id/bt_main_registrar"
        style="@style/ButtonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:background="@anim/main_button_gris"
        android:text="@string/bt_registrar" />

    <Button
        android:id="@+id/bt_main_entrar"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_main_registrar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:background="@anim/main_button_orange"
        android:text="@string/bt_entrar"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_main_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_main_entrar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="@string/des_constrasenia"
        android:inputType="textPassword"
        android:background="@anim/main_text_white" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/input_main_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_main_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/des_email"
        android:inputType="textEmailAddress"
        android:background="@anim/main_text_white"  />

</RelativeLayout>