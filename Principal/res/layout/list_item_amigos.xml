<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/amigos_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/delete"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/amigos_stats"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/amigos_delete"
        android:background="@drawable/stats"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/amigo_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/amigos_stats"
        android:layout_alignBottom="@+id/amigos_stats"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="@string/bt_aniadir_amigo"
        android:textColor="#373737"
        android:textSize="20sp" />

</RelativeLayout>