<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlayout_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background_hd"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Estadisticas" >

    <TextView
        android:id="@+id/tv_stats"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/lv_stats"
        android:layout_alignRight="@+id/lv_stats"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_corners_white"
        android:minHeight="25dip"
        android:text="@string/title_activity_estadisticas"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/lv_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stats"
        android:layout_marginTop="15dp"
        android:divider="@drawable/divider"
        android:paddingBottom="10dp" >

    </ListView>

</RelativeLayout>