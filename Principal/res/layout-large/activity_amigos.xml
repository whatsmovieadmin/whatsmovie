<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background_hd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Amigos" >

    <Button
        android:id="@+id/bt_amigos_aniadir"
        style="@style/ButtonText"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_corners_white"
        android:drawableLeft="@drawable/add_friend"
        android:minHeight="25dip"
        android:text="@string/bt_aniadir_amigo"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/lv_amigos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_amigos_aniadir"
        android:layout_alignRight="@+id/bt_amigos_aniadir"
        android:layout_below="@+id/bt_amigos_aniadir"
        android:background="@drawable/rounded_corners_white"
        android:divider="@drawable/divider"
        android:paddingBottom="10dp" >

    </ListView>
    
</RelativeLayout>