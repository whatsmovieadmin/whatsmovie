<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            
            <gradient
                android:startColor="#e69f09"
                android:endColor="#edbe67"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e19b1a" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#edbe67"
                android:endColor="#e69f09"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e19b1a" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>